@page "/patientcreate"
@using HospitalFrontEnd.Data
@using HospitalFrontEnd.Components
@inherits PatientComponent

<h1>Create new Patient</h1>

<EditForm Model="@CreatePatientForm" OnValidSubmit="Create">
    <table>
        <tr><td><label for="fname">First Name</label></td><td><InputText id="fname" @bind-Value="CreatePatientForm.Patient_fName" /></td></tr>
        <tr><td><label for="lname">Last Name</label></td><td><InputText id="lname" @bind-Value="CreatePatientForm.Patient_lName" /></td></tr>
        <tr><td><label for="dob">DOB</label></td><td><InputDate id="dob" @bind-Value="CreatePatientForm.Patient_DoB" /></td></tr>
        <tr><td><label for="phonenumber">Phone Number</label></td><td><InputText id="phonenumber" @bind-Value="CreatePatientForm.Patient_PhoneNum" /></td></tr>
        <tr><td><label for="allergy">Allergy</label></td><td><InputText id="allergy" @bind-Value="CreatePatientForm.Patient_Allergy" /></td></tr>
    </table>
    <button class="btn btn-primary" type="submit">Create</button>
    @if (feedbackCreation.Length != 0)
    {
        <p>@feedbackCreation</p>
    }
</EditForm>
